<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="/style/base.css" />
		<script src="/socket.io/socket.io.js"></script>
		<script src="/scripts/base.js"></script>
		<script src="/scripts/deployment.js"></script>
		<title>Lemon-DM</title>
	</head>
	<body onload="init()">
		<hr />
		<div class="vertical-container" style="height: 65vh">
			<h3>Build</h3>
			<table class="border1 table-container">
				<tr>
					<th>Name</th>
					<th>Version</th>
					<th>Created At</th>
				</tr>
				<tr>
					<td id="build-name">loading...</td>
					<td id="build-version">loading...</td>
					<td id="build-CreatedAt">loading...</td>
				</tr>
				<tr>
					<th colspan="3">Git URI</th>
				</tr>
				<tr>
					<td id="build-gitUrl" colspan="3">loading... </td>
				</tr>
				<tr>
					<td><button onclick="rebuild()">Rebuild</button></td>
					<td>
						<button onclick="deleteBuild()">
							Delete build
						</button>
					</td>
					<td>
						<button onclick="deleteAllDeployments()">
							Delete all deployments
						</button>
					</td>
				</tr>
			</table>
			<h4>Create new deployment</h4>
			<h3>Deployments</h3>
			<table class="border1 table-container">
				<tbody>
					<tr>
						<th>DeploymentID</th>
						<th>Status</th>
						<th>Created at</th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</tbody>
			</table>
		</div>
		<template id="deployment-wrapper-template">
			<tr>
				<td class="deployment-name">Test1</td>
				<td class="deployment-status">running</td>
				<td class="deployment-CreatedAt">some date</td>
				<td><button class="deployment-restart">Restart</button></td>
				<td><button class="deployment-pause/unpause">Pause</button></td>
				<td><button class="deployment-start/stop">Start</button></td>
			</tr>
		</template>

		<iframe
			id="terminal"
			style="
				height: 30vh;
				width: 100vw;
				position: fixed;
				bottom: 0;
				left: 0;
				margin: 0;
				box-sizing: border-box;
			"
		></iframe>
	</body>
</html>
